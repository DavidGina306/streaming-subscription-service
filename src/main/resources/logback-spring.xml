<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                {"time":"%d{yyyy-MM-dd HH:mm:ss.SSS}","correlationId":"%X{correlationId:-}","level":"%level","appName":"soma-vendas", "thread": "%thread", "class": "%logger{40}", "message": "%message%throwable"}%n
            </pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>